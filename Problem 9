#include <iostream>
#include <conio.h>

using namespace std;

void box(int a, int b)  
{  
    int i, j;  
    for (i = 1; i <= a; i++)  
    {  
        for (j = 1; j <= b; j++)  
                 
            cout << "*";              
            
         
        cout << endl; 
    }  
  
}  

int main() 
{
	int rows, columns;
	
	cout << "Good day! This will help you visualize your desired arrangement in terms of number of rows and columns." << endl;
	
	cout << "Enter how many rows:"; cin >> rows;
	cout << "Enter how many columns:"; cin >> columns;
  
    box(rows, columns);
	
	_getch();
    return 0;
}
