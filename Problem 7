#include <iostream>
#include <conio.h>

using namespace std;

int main() 
{
  

    int number, sum = 0;
    
    do
	{
        cout << "Enter a Number:"; cin >> number;
    
    	for (int i = 1; i <= number; ++i)
    
    	sum += i;
    
    	cout << "The Sum of the Whole Numbers from 1 to " << ' ' << number << "is" << ' ' << sum << endl;
    	
    	
    	
    }
    
    while(number != 0);

    cout << "Thank you!" << endl;
    

    
    
    _getch();
    return 0;
}
